{
    "name": "zone99/sar-symbol",
    "description": "Saudi Riyal Currency Symbol Extension for Magento 2 - Replaces standard SAR currency symbols with custom font symbols",
    "type": "magento2-module",
    "version": "1.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "zone99",
            "email": "support@zone99.com"
        }
    ],
    "keywords": [
        "magento2",
        "currency",
        "saudi-riyal",
        "SAR",
        "symbol",
        "font",
        "localization",
        "zone99"
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1|^8.2",
        "magento/framework": "^103.0",
        "magento/module-store": "^101.0",
        "magento/module-directory": "^100.0",
        "magento/module-theme": "^101.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "magento/magento-coding-standard": "^33.0"
    },
    "suggest": {
        "magento/module-catalog": "For product price display integration",
        "magento/module-checkout": "For cart and checkout price display"
    },
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "zone99\\SARSymbol\\": ""
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "extra": {
        "magento-force": "override",
        "magento-deploystrategy": "copy"
    }
} 